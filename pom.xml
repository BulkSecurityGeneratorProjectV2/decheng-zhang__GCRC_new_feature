	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<version>${cargo.version}</version>
				<extensions>true</extensions>
				<configuration>
					<descriptor>src/assemble/merge.xml</descriptor>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<servlet-api.version>2.5</servlet-api.version>
		<log4j.version>1.2.14</log4j.version>
		<junit.version>3.8.1</junit.version>
		<cargo.version>1.2.4</cargo.version>
		<mail.version>1.5.1</mail.version>
		<json.version>20140107</json.version>
		<maven-dependency-plugin.version>2.5.1</maven-dependency-plugin.version>
		<appassembler-maven-plugin.version>1.3</appassembler-maven-plugin.version>
		<slf4j.version>1.7.2</slf4j.version>
		<commons-codec.version>1.8</commons-codec.version>
		<mustache.version>0.8.14</mustache.version>
		<jetty.version>9.2.3.v20140905</jetty.version>
	</properties>
	<modules>
		<module>nunaliit2-jdbc</module>
		<module>nunaliit2-jdbc-json</module>
		<module>nunaliit2-search</module>
		<module>nunaliit2-auth-common</module>
		<module>nunaliit2-auth-cookie</module>
		<module>nunaliit2-dbSec</module>
		<module>nunaliit2-auth-http</module>
