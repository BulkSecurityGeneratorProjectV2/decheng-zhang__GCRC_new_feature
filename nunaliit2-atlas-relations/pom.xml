<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>nunaliit2</artifactId>
    <groupId>ca.carleton.gcrc</groupId>
    <version>2.0.0-SNAPSHOT</version>
  </parent>
  <groupId>ca.carleton.gcrc</groupId>
  <artifactId>nunaliit2-atlas-relations</artifactId>
  <version>2.0.0-SNAPSHOT</version>
  <packaging>war</packaging>
  <name>nunaliit2-atlas-relations</name>
  <description>WAR artifact that contains all jars and javascript files
  to deploy an online atlas. This artifact can be used as a WAR overlay.
  The atlas instances built using this artifact are based on the database
  schema where a main relations table link all other data.</description>
  <build>
  	<plugins>
  		<plugin>
		  <groupId>org.codehaus.cargo</groupId>
		  <artifactId>cargo-maven2-plugin</artifactId>
		  <version>${cargo.version}</version>
		  <extensions>true</extensions>
		  <configuration>
		    <descriptor>src/assemble/merge.xml</descriptor>
		  </configuration>
			<executions>
				<execution>
					<phase>package</phase>
					<goals>
						<goal>uberwar</goal>
					</goals>
				</execution>
			</executions>
		</plugin>
  	</plugins>
  </build>
  <dependencies>
  	<dependency>
  		<groupId>ca.carleton.gcrc</groupId>
  		<artifactId>nunaliit2-js</artifactId>
  		<version>${project.version}</version>
  		<type>war</type>
  		<scope>compile</scope>
  	</dependency>
  	<dependency>
  		<groupId>ca.carleton.gcrc</groupId>
  		<artifactId>nunaliit2-js-external</artifactId>
  		<version>${project.version}</version>
  		<type>war</type>
  		<scope>compile</scope>
  	</dependency>
  	<dependency>
  		<groupId>ca.carleton.gcrc</groupId>
  		<artifactId>nunaliit2-war-relations</artifactId>
  		<version>${project.version}</version>
  		<type>war</type>
  		<scope>compile</scope>
  	</dependency>
  </dependencies>
</project>