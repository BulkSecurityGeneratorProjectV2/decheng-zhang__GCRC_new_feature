#!/bin/sh
RUN_AS_USER=@SERVLET_USER@
JAVA_HOME=@JAVA_HOME@
JETTY_HOME=@SERVLET_HOME_DIR@
JETTY_PID=/var/lock/jetty_atlas_@ATLAS_NAME@.pid
JETTY_PORT=@SERVLET_URL_PORT@
NUNALIIT_CONF_DIR=@ATLAS_CONFIG_DIR@
ENV="env -i LANG=C JETTY_USER=${RUN_AS_USER} JETTY_HOME=${JETTY_HOME} JETTY_PID=${JETTY_PID} JETTY_PORT=${JETTY_PORT} NUNALIIT_CONF_DIR=${NUNALIIT_CONF_DIR} PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin JAVA_HOME=${JAVA_HOME}"
$ENV ${JETTY_HOME}/bin/jetty.sh $@
